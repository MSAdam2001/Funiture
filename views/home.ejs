<%- include('partials/header') %>

<!-- Hero Section -->
<section class="text-center py-5 bg-light">
  <div class="container">
    <h1 class="display-5 fw-bold">Welcome to Furniture World</h1>
    <p class="lead">Find beautiful and comfortable furniture for your home and office.</p>
  </div>
</section>

<!-- Furniture Gallery -->
<div class="container my-5">
  <div class="row">
    <% furnitureItems.forEach(item => { %>
      <div class="col-md-3 mb-4">
        <div class="card h-100 shadow-sm border-0 hover-shadow">
          <img src="<%= item.image %>" class="card-img-top" alt="<%= item.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <p class="card-text"><%= item.description %></p>
            <h6 class="text-success"><%= item.price %></h6>
            <a href="#" class="btn btn-outline-dark btn-sm">View Details</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<!-- Include About Section Partial -->
<%- include('partials/about') %>

<!-- Contact Section -->
<%- include('partials/contact') %>

<%- include('partials/footer') %>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<style>
/* Hover shadow effect for cards and social icons */
.hover-shadow:hover {
  box-shadow: 0 8px 20px rgba(0,0,0,0.2);
  transform: translateY(-3px);
  transition: all 0.3s ease;
}

.card {
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 12px 30px rgba(0,0,0,0.25);
}

.social-icon:hover {
  color: #ffd700;
  transform: scale(1.15);
  transition: all 0.25s ease;
}

</style>
