<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Furniture World Blog</title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">ðŸª‘ Furniture World</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link active" href="/blog">Blog</a></li>

          <% if (user) { %>
            <li class="nav-item">
              <a class="nav-link text-warning">Welcome, <%= user.username %>!</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-danger" href="/logout">Logout</a>
            </li>
          <% } else { %>
            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
            <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Blog Header -->
  <section class="text-center py-5 bg-light">
    <div class="container">
      <h1 class="display-5 fw-bold">ðŸ“° Furniture Blog</h1>
      <p class="lead text-muted">Read the latest trends, guides, and design ideas for your home.</p>
    </div>
  </section>

  <!-- Blog Posts -->
  <div class="container my-5">
    <div class="row">
      <% if (blogs.length === 0) { %>
        <p class="text-center text-muted">No blog posts yet.</p>
      <% } else { %>
        <% blogs.forEach(blog => { %>
          <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
              <img src="<%= blog.image %>" class="card-img-top" alt="<%= blog.title %>" />
              <div class="card-body">
                <h5 class="card-title"><%= blog.title %></h5>
                <p class="card-text"><%= blog.content.substring(0, 100) %>...</p>
              </div>
              <div class="card-footer text-muted">
                Posted by <strong><%= blog.author %></strong>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <!-- Optional Blog Form (Only for logged-in users) -->
  <% if (user) { %>
    <div class="container my-5">
      <h3>Add a New Blog Post</h3>
      <form action="/blog/add" method="POST" class="p-3 border rounded bg-light">
        <div class="mb-3">
          <label class="form-label">Title</label>
          <input type="text" name="title" class="form-control" required />
        </div>
        <div class="mb-3">
          <label class="form-label">Content</label>
          <textarea name="content" class="form-control" rows="4" required></textarea>
        </div>
        <div class="mb-3">
          <label class="form-label">Image URL</label>
          <input type="text" name="image" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Publish</button>
      </form>
    </div>
  <% } %>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3">
    <p class="mb-0">&copy; <%= new Date().getFullYear() %> Furniture World Blog.</p>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
